{{!
    @template block_todo/pin

    ToDo pin template.

    Renders a single todo item that is pinned.

    See block_todo/content for data structure.
}}

<li class="list-group-item p-3 d-flex {{#done}}text-muted muted{{/done}} pinned-item" data-item="{{id}}" data-done="{{done}}" data-text="{{todotext}}" data-duedate="{{duedate}}" data-groupid="{{groupid}}">
    <div class="h5 mr-1 mb-0" data-control="toggle" role="button" title="{{#str}} toggle, block_todo {{/str}}" aria-label="{{#str}} toggle, block_todo {{/str}}">
        {{#done}}<i class="icon fa fa-check-square" aria-hidden="true"></i>{{/done}}
        {{^done}}<i class="icon fa fa-square-o" aria-hidden="true"></i>{{/done}}
    </div>
    <div class="mr-auto">
        <div class="d-none badge badge-secondary {{#overdue}}badge-danger{{/overdue}} {{#today}}badge-success{{/today}}">{{duedateformatted}}</div>
        <div class="d-inline-block">
            {{#duedateformatted}}
            <div style="font-size:14px;" class="font-weight-bold">
                {{duedateformatted}}
                <span class="ms-1">
                    {{#today}}<span class="badge bg-success">{{#str}}today, block_todo{{/str}}</span>{{/today}}
                    {{#overdue}}<span class="badge bg-danger">{{#str}}overdue, block_todo{{/str}}</span>{{/overdue}}
                </span>
            </div>
            {{/duedateformatted}}
            <span class="{{#done}}done{{/done}}">
                {{#groupid}}<i class="me-1 fa fa-star group-icon group-icon-{{groupid}}"></i>{{/groupid}}
                {{todotext}}
            </span>
        </div>
    </div>
    <div data-control="actions">
        {{#actions}}{{> core/action_menu}}{{/actions}}
    </div>
</li>
