{{!
    @template block_todo/add

    ToDo add template.

    Renders a triggered modal window with inputs that to be used for adding a new item.
}}

<form>
    <div class="mb-3">
        <label for="block_todo_add_text">{{#str}} itemname, block_todo {{/str}}</label>
        <input id="block_todo_add_text" type="text" name="block_todo_add_text" class="form-control block_todo_add_text" maxlength="125" data-control="addtext" required>
    </div>
    <div>
        <label for="block_todo_add_duedate">{{#str}} duedate, block_todo {{/str}}</label>
        <input id="block_todo_add_duedate" class="form-control block_todo_add_duedate" name="block_todo_add_duedate" type="date">
    </div>
</form>
